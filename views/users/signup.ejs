<% layout("./layouts/boilerplate.ejs") %>

    <body>
        <div class="row mt-5">
            <h1 class="text-center mb-3">SignUp </h1>
            <div class="col-6 offset-3">
                <form action="/signup" method="post" novalidate class="needs-validation">
                    <div class="mb-3">
                        <label for="user" class="form-label">Username</label>
                        <input type="text" name="username" class="form-control" id="user" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" name="email" class="form-control" id="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" name="password" class="form-control" id="password" required>
                    </div>
                    <button class="btn btn-success mt-1">SignUp</button>
                </form>
            </div>
        </div>
    </body>