<% layout("./layouts/boilerplate") %>

<style>
  .ctn {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  #filters {
    display: flex;
    flex-wrap: wrap;
    color: grey;
  }

  #filter {
    margin: 1.5rem 3rem 1.5rem 0;
    text-align: center;
    transition: color 0.5s ease;
  }

  #filter>p {
    margin: 0;
    text-align: center;
    font-size: 0.9rem;
  }

  .icons {
    font-size: 2rem;
  }

  #filter:hover {
    color: black;
    cursor: pointer;
  }

  .tax-toggle {
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 1.2rem;
    border: 1px solid grey;
    padding: 0.8rem;
    border-radius: 0.8rem;
  }

  .tax-info {
    display: none;
  }

  .displayTax {
    display: inline;
  }
</style>

<div class="ctn">
  <div id="filters">
    <div id="filter">
      <div> <i class="icons fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>
    <div id="filter">
      <div> <i class="icons  fa-solid fa-bed"></i></i></div>
      <p>Rooms</p>
    </div>
    <div id="filter">
      <div> <i class="icons fa-solid fa-mountain-city"></i></div>
      <p>Iconic Cities</p>
    </div>
    <div id="filter">
      <div> <i class="icons fa-solid fa-mountain"></i></div>
      <p>Mountain Cities</p>
    </div>
    <div id="filter">
      <div> <i class="icons  fa-solid fa-fort-awesome"></i></i></div>
      <p>Castles</p>
    </div>
    <div id="filter">
      <div> <i class="icons fa-solid fa-person-swimming"></i></div>
      <p>Amazig Pools</p>
    </div>
    <div id="filter">
      <div> <i class="icons fa-solid fa-campground"></i></div>
      <p>Camping</p>
    </div>
    <div id="filter">
      <div> <i class="icons fa-solid fa-snowflake"></i></div>
      <p>Snow</p>
    </div>
    <div id="filter">
      <div> <i class="icons fa-solid fa-landmark-dome"></i></div>
      <p>Domes</p>
    </div>
    <div id="filter">
      <div> <i class="icons fa-solid fa-sailboat"></i></div>
      <p>Boat</p>
    </div>
  </div>

  <div class="tax-toggle">
    <div class="form-check-reverse form-switch ">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
      <label class="form-check-label" for="flexSwitchCheckDefault">Display Total after Taxes</label>
    </div>
  </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for(let listing of allListings){ %>
    <a href="<%= baseUrl %>/listings/<%= listing._id %>">
      <div class="card col">
        <img src="<%= listing.image.url  %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
        <div class="card-body">
          <p class="card-text"><b><%= listing.title %></b><br>
            &#x20b9;<%= listing.price.toLocaleString("en-IN") %>/ night &nbsp;&nbsp;
            <i class="tax-info">+ 18% GST</i>
          </p>
        </div>
      </div>
    </a>
  <% } %>
</div>

<script>
  let taxSwitch = document.getElementById("flexSwitchCheckDefault");
  const taxElements = document.getElementsByClassName("tax-info");

  taxSwitch.addEventListener('click', () => {
    for (let i = 0; i < taxElements.length; i++) {
      taxElements[i].classList.toggle("displayTax");
    }
  });
</script>
