<% layout("./layouts/boilerplate.ejs") %>

  <body>
    <div class="row mt-5 ">
      <div class="col-8 offset-2">
        <h1>
          <%= listing.title %>
        </h1>
      </div>
      <div class="card col-6 offset-2">
        <img src="<%=listing.image%>" class="card-img-top show-img" alt="listing-image">
        <div class="card-body">
          <p class="card-text">
            <%= listing.description %> <br>
              &#x20b9;<%= listing.price.toLocaleString("en-IN") %> <br>
                <%= listing.location %> <br>
                  <%= listing.country %> <br>
          </p>
        </div>
      </div>
    </div>
    <div class="btns mb-5">
      <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark offset-2 col-1">Edit </a>
      <form action="/listings/<%=listing._id%>?_method=DELETE" method="post">
        <button class="btn btn-danger offset-4">Delete</button>
      </form>
    </div>
    <div class="col-6 offset-2 ">
      <h4 class="offset-5">Leave a Review</h4>
      <form action="/listings/<%=listing._id%>/reviews" method="post" novalidate class="needs-validation">
        <div class="mb-3">
          <label for="rating" class="form-label">Rating</label>
          <input type="range" id="rating" class="form-control form-range" min="1" max="5" name="review[rating]">
        </div>
        <div class="mb-3">
          <label for="comment" class="form-label">Comment</label>
          <textarea type="text" id="comment" class="form-control" placeholder="Very Good!" name="review[comment]"
            required></textarea>
          <div class="invalid-feedback">
            Please provide a valid Comment.
          </div>

        </div>
        <button class="btn btn-primary mt-2 mb-4">Comment</button>
      </form>
      <hr>
      <h4 class="mt-3 mb-3">All Reviews</h4>
      <div class="row">
        <%for(review of listing.reviews){%>
          <div class="card border border-dark-subtle p-4 pb-1 pt-2 col-5 m-2">
            <div class="card-body ">
              <h5 class="card-title">Satyam Kumar.</h5>
              <p class="card-text">
                <%= review.comment %> <br> 
                <%= review.rating %> stars
              </p>
            </div>
            <form action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE" method="post">
              <button class="btn btn-sm btn-dark mt-1 mb-2">Delete</button>
            </form>
          </div>
        <%}%>
      </div>
    </div>
  </body>